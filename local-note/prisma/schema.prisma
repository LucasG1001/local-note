generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(uuid())
  titulo    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  
  tags      Tag[]
}

model Tag {
  id     String @id @default(uuid())
  name   String
  noteId String
  note   Note   @relation(fields: [noteId], references: [id], onDelete: Cascade)
}