generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Folder {
  id   String    @id @default(cuid())
  name String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  notes Note[]
}


model Note {
  id        String    @id @default(cuid())
  views     Int       @default(0)
  title     String
  content   String
  language  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  folderId String
  folder Folder @relation(fields: [folderId], references: [id])
}
